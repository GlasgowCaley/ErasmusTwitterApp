<VBox fx:id="mainVbox" minWidth="100.0" minHeight="200" stylesheets="/landpage.css" xmlns:fx="http://javafx.com/fxml" fx:controller="org.tweet_tea.gui.Landpage">
  <children>
  
  	<HBox fx:id="menuBar" minHeight="41.0" prefHeight="49.0" alignment="CENTER">
  		<children>
  			<Text id="title"></Text>
  		</children>
  	</HBox>
  	
  	<HBox fx:id="contentPane" minHeight="100.0" prefHeight="150.0" alignment="CENTER">
  		<children>
  			<HBox fx:id="userNameBox" minHeight="20.0" prefHeight="30" alignment="CENTER">
  				<HBox.margin>
            		<Insets bottom="5.0" fx:id="x1" />
          		</HBox.margin>
  				<children>
  					<Text id="user_name">
  						<HBox.margin>
            				<Insets bottom="5.0" fx:id="x1" />
          				</HBox.margin>
  					</Text>
  				</children>
  			</HBox>
  			
  			<HBox fx:id="screenNameBox" minHeight="20.0" prefHeight="30" alignment="CENTER">
  				<HBox.margin>
            		<Insets bottom="5.0" fx:id="x1" />
          		</HBox.margin>
  				<children>
  					<Text id="screen_name">
  						<HBox.margin>
            				<Insets bottom="5.0" fx:id="x1" />
          				</HBox.margin>
  					</Text>
  				</children>
  			</HBox>
  			
  			
  			<Text id="nbFollowers">
  	    		<HBox.margin>
            		<Insets bottom="5.0" fx:id="x1" />
          		</HBox.margin>
  	    	</Text>
  	    	
  	    	<Text id="nbFollowed">
  	    		<HBox.margin>
            		<Insets bottom="5.0" fx:id="x1" />
          		</HBox.margin>
  	    	</Text>
  		
  		</children>
  	</HBox>
  	
  	<HBox fx:id="twitterInformations" alignment="CENTER" minWidth = "200.0" prefWidth="400.0" VBox.vgrow="NEVER">
  	    <children>
  	    
  			<Button id="btnFollow" mnemonicParsing="false"  text="Follow">
    		   <HBox.margin>
            		<Insets right="10.0" fx:id="x1" />
          		</HBox.margin>
    		</Button>
    		
    		<Button id="btnBlock" mnemonicParsing="false"  text="Block">
    		   <HBox.margin>
            		<Insets right="10.0" fx:id="x1" />
          		</HBox.margin>
    		</Button>
    		
    		<Button id="btnCancel" mnemonicParsing="false"  text="Cancel">
    			<HBox.margin>
            		<Insets right="10.0" fx:id="x1" />
          		</HBox.margin>
    		</Button>
    	</children>
  	</HBox> 
  	

    <HBox fx:id="footer" alignment="CENTER" VBox.vgrow="NEVER">
    	<HBox.margin>
            		<Insets top="10.0" fx:id="x1" />
        </HBox.margin>
    </HBox>
  </children>
</VBox>